  <script>
    var base
        , baseMask
        , shadow
        , overlay;
    var s = Snap("#svg");

    var mat = new Snap.Matrix();
    console.log(mat.toTransformString());
    mat.translate(-124, 0);
    console.log(mat.toTransformString());


    var logo = s.g().attr({id: 'logo'});
    var basePoints = "0,60," + (Math.sqrt(200) *10)+ ",80," + (10*(Math.sqrt(200) + 4)) +",120,"+ ((Math.sqrt(200) + 4)*10) +",0,"+ (Math.sqrt(200)*10)+",40";
    var baseMaskPoints = (Math.sqrt(200) *10)+ ",80," + (10*(Math.sqrt(200) + 4)) +",120,"+ ((Math.sqrt(200) + 4)*10) +",0,"+ (Math.sqrt(200)*10)+",40";
    baseMask = s.polygon(baseMaskPoints).attr({fill: 'red'});
    base = s.polygon(basePoints).attr({fill: '#B876B6'});
    logo.add(base);
    var shadowPoints = (Math.sqrt(200) *10)+",90, " + (Math.sqrt(200) *10)+ ",80, "+(Math.sqrt(200)*10)+",40";
    shadow = s.polygon(shadowPoints).attr({fill: '#7A4E79', mask: baseMask});
    logo.add(shadow);
    var overlayPoints = (Math.sqrt(200) *10)+",60, " + (Math.sqrt(200) *10)+ ",80, "+(Math.sqrt(200)*10)+",40";
    overlay = s.polygon(overlayPoints).attr({fill: '#85A6D8'});
    logo.add(overlay);
    function overlayAnimation(){
      var newOverlay = (10*(Math.sqrt(200) + 10))+",60, " + (Math.sqrt(200) *10)+ ",80, "+(Math.sqrt(200)*10)+",40"
      overlay.animate({points: newOverlay}, 200, mina.easein);
    };
    function baseAnimation(){
      var newBase = (Math.sqrt(200) *10)+",60, " + (Math.sqrt(200) *10)+ ",80, " + (10*(Math.sqrt(200) + 4)) +",120, "+ ((Math.sqrt(200) + 4)*10) +",0, "+ (Math.sqrt(200)*10)+",40";
      base.animate({points: newBase}, 800, mina.easeout, function(){shadowAnimation(); overlayAnimation();});
    };
    function shadowAnimation(){
      var newShadow = (10*(Math.sqrt(200) + 10))+",90, " + (Math.sqrt(200) *10)+ ",80, "+(Math.sqrt(200)*10)+",40";
      shadow.animate({points: newShadow}, 200, mina.easein);
    };
    function rotate(){
      logo.animate({
        transform: 't-440, 0r-45, 164, 60'
      }, 2000, mina.backin);
    };
    setTimeout(function(){baseAnimation()},1000);
    rotate();

    // grab elements as array, rather than as NodeList
    var elements = document.querySelectorAll("...");
    elements = Array.prototype.slice.call(elements);

    // make each element do something on scroll
    elements.forEach(function(element) {
      window.addEventListener("scroll", function(evt) {
      // not the most exciting thing, but a thing nonetheless
      console.log(element);
      });
    });


  </script>
